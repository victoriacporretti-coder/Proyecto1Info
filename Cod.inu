void setup() {
  // put your setup code here, to run once:
  Serial.begin(115200);
  pinMode(pinbuz,OUTPUT);
  pinMode(pinboton,INPUT);
  pinMode(pinR, OUTPUT);
  pinMode(pinA, OUTPUT);
  pinMode(pinV, OUTPUT);
  pinMode(LedA, OUTPUT);
  pinMode(LedB, OUTPUT);
  pinMode(LedC, OUTPUT);
  pinMode(LedD, OUTPUT);
  pinMode(LedE, OUTPUT);
  pinMode(LedF, OUTPUT);
  pinMode(LedG, OUTPUT);
  
}

void loop() 
{
  int estadoBoton, proceso=LOW; 
  //static int  estadoPin=LOW;
