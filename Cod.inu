void inicializar ()
{
  //Anodo. HIGH es apagado
   digitalWrite(LedA, HIGH);
   digitalWrite(LedB, HIGH);
   digitalWrite(LedC, HIGH);
   digitalWrite(LedD, HIGH);
   digitalWrite(LedE, HIGH);
   digitalWrite(LedF, HIGH);
   digitalWrite(LedG, HIGH);
}

